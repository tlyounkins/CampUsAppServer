<h1>New User</h1>

<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        
        <%= f.label :firstname %>
        <%= f.password_field :firstname, class: 'form-control' %>

        <%= f.label :lastname %>
        <%= f.password_field :lastname, class: 'form-control' %>

        <%= f.label :bio %>
        <%= f.password_field :bio, class: 'form-control' %>

        <%= f.label :major %>
        <%= f.password_field :major, class: 'form-control' %>

        <%= f.label :hometown %>
        <%= f.password_field :hometown, class: 'form-control' %>

        <%= f.label :age %>
        <%= f.password_field :age, class: 'form-control' %>

        <%= f.label :gender %>
        <%= f.password_field :gender, class: 'form-control' %>

        <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', users_path %>
